@model SignUpModel
@{
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center ">
    <div class="card m-5 p-5 h-100 w-50 ">
        <h4 class="text-center"><i class="bi bi-box-arrow-in-left">  </i>Sign Up Now!</h4>
        <div class="alert alert-info mt-2" role="alert">
            Password must be 6 characters long with at least one special character and one number. Example: <b><em>Password123$</em></b>
        </div>
        @* <div class="text-danger" asp-validation-summary="All"></div> *@
        <form asp-action="SignUp" asp-controller="Account" id="SignUpForm" method="post">
            <div class="form-group mb-2">
                <label asp-for="Username" class="form-label">Username:</label>
                <span asp-validation-for="Username" class="d-block text-danger"></span>
                <input asp-for="Username"  class="form-control"  />            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="form-label" >Email:</label>
                <span asp-validation-for="Email" class="d-block text-danger"></span>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="form-label" >Password:</label>
                <span asp-validation-for="Password" class="d-block text-danger"></span>
                <input asp-for="Password"  
                       class="form-control"  />
            </div>
            <div class="form-group mb-2">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password:</label>
                <span asp-validation-for="ConfirmPassword" class="d-block text-danger"></span>
                <input asp-for="ConfirmPassword"  type="password" 
                       class="form-control" />
            </div>
            <button class="btn btn-primary mt-2" type="submit">
                Sign Up and Login
            </button>
        </form>

        <h4 class="text-center pt-5"><i class="bi bi-box-arrow-in-left">  </i>Login With</h4>
        <a asp-action="GoogleSignIn" asp-controller="Account" class="btn btn-lg form-control mb-3" style="background-color:#f2a60c;color:white;">
            <i class="bi bi-envelope-arrow-down-fill"></i> Gmail
        </a>
    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}
